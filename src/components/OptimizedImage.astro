---
export interface Props {
  src: string;
  alt: string;
  loading?: 'eager' | 'lazy';
  class?: string;
}

const { src, alt, loading = 'lazy', class: className } = Astro.props;
---

<img
  src={src}
  alt={alt}
  loading={loading}
  class={className}
  style="max-width: 100%; height: auto; display: block;"
/>
