---
interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  loading?: 'lazy' | 'eager';
  fetchpriority?: 'high' | 'low' | 'auto';
  class?: string;
  sizes?: string;
}

const {
  src,
  alt,
  width,
  height,
  loading = 'lazy',
  fetchpriority = 'auto',
  class: className,
  sizes,
  ...rest
} = Astro.props;
---

<img
  src={src}
  alt={alt}
  width={width}
  height={height}
  loading={loading}
  fetchpriority={fetchpriority}
  class={className}
  sizes={sizes}
  {...rest}
/>

<style>
  img {
    max-width: 100%;
    height: auto;
    display: block;
  }
</style>
