---
interface Props {
  size?: 'small' | 'medium' | 'large';
  text?: string;
}

const { size = 'medium', text = 'Loading...' } = Astro.props;
---

<div class={`loading-spinner ${size}`}>
  <div class="spinner"></div>
  {text && <p class="loading-text">{text}</p>}
</div>

<style>
  .loading-spinner {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .spinner {
    border: 3px solid var(--border-color);
    border-top: 3px solid var(--accent-primary);
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  .small .spinner {
    width: 20px;
    height: 20px;
    border-width: 2px;
  }

  .medium .spinner {
    width: 40px;
    height: 40px;
  }

  .large .spinner {
    width: 60px;
    height: 60px;
    border-width: 4px;
  }

  .loading-text {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin: 0;
  }

  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
</style>
