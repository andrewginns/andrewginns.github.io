---
import OptimizedImage from './OptimizedImage.astro';

interface Props {
  name: string;
  title: string;
  description: string;
  imageUrl: string;
  imageAlt: string;
  tagline?: string;
}

const { name, title, description, imageUrl, imageAlt, tagline } = Astro.props;
---

<div class="hero-card">
  <div class="hero-image-wrapper">
    <OptimizedImage
      src={imageUrl}
      alt={imageAlt}
      width={200}
      height={200}
      loading="eager"
      fetchpriority="high"
      class="hero-image"
      transition:name="hero-image"
    />
  </div>
  <div class="hero-content">
    <h1 class="hero-title" transition:name="hero-title">{name} üëãüèº</h1>
    <p class="hero-subtitle">{title}</p>
    <p class="hero-description">{description}</p>
    {tagline && <p class="hero-tagline">{tagline}</p>}
    <div class="hero-links">
      <a
        href="https://linkedin.com/in/andrewginns"
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
          ></path>
        </svg>
        LinkedIn
      </a>
      <a
        href="https://github.com/andrewginns"
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
        GitHub
      </a>
    </div>
  </div>
</div>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-card {
    display: flex;
    align-items: center;
    background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-primary) 100%);
    border-radius: 16px;
    padding: 2rem;
    margin-bottom: 3rem;
    border: 1px solid var(--border-color);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    animation: fadeInUp 0.6s ease-out;
    box-shadow: 0 4px 12px var(--shadow-light);
  }

  .hero-card:hover {
    border-color: var(--accent-primary);
    background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
    transform: translateY(-4px);
    box-shadow: 0 12px 28px var(--shadow-medium);
  }

  .hero-image-wrapper {
    flex-shrink: 0;
    margin-right: 2rem;
  }

  .hero-image {
    width: 200px;
    height: 200px;
    border-radius: 16px;
    object-fit: cover;
    box-shadow:
      0 8px 24px var(--shadow-medium),
      0 0 0 1px rgba(255, 255, 255, 0.1),
      0 0 20px rgba(231, 76, 60, 0.1);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hero-card:hover .hero-image {
    transform: scale(1.02) rotate(1deg);
    box-shadow:
      0 12px 32px var(--shadow-strong),
      0 0 0 1px rgba(255, 255, 255, 0.2),
      0 0 40px rgba(231, 76, 60, 0.3),
      0 0 60px rgba(52, 152, 219, 0.2);
  }

  .hero-content {
    flex: 1;
  }

  .hero-title {
    font-size: 2.5rem;
    margin: 0 0 0.5rem 0;
    color: var(--text-primary);
  }

  .hero-subtitle {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin: 0 0 1rem 0;
    font-weight: 500;
  }

  .hero-description {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--text-secondary);
    margin: 0 0 1rem 0;
  }

  .hero-tagline {
    font-size: 0.95rem;
    color: var(--text-light);
    font-style: italic;
    margin: 0 0 1.5rem 0;
  }

  .hero-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
    border: 2px solid var(--border-color);
    border-radius: 12px;
    text-decoration: none;
    color: var(--text-secondary);
    font-size: 0.9rem;
    font-weight: 500;
    position: relative;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    box-shadow: 0 4px 12px var(--shadow-light);
  }

  .social-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.5s ease;
  }

  .social-link:hover {
    border-color: var(--accent-primary);
    color: var(--accent-primary);
    transform: translateY(-2px) scale(1.05) rotate(1deg);
    box-shadow: 0 8px 20px var(--shadow-medium);
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    color: white;
  }

  .social-link:hover::before {
    left: 100%;
  }

  .social-link:hover svg {
    transform: scale(1.1) rotate(5deg);
  }

  .social-link svg {
    opacity: 0.9;
    transition: all 0.3s ease;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .hero-card {
      flex-direction: column;
      text-align: center;
      padding: 1.5rem;
    }

    .hero-image-wrapper {
      margin-right: 0;
      margin-bottom: 1.5rem;
    }

    .hero-image {
      width: 150px;
      height: 150px;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .hero-description {
      font-size: 1rem;
    }

    .hero-links {
      justify-content: center;
    }

    .social-link {
      font-size: 0.85rem;
      padding: 0.4rem 0.8rem;
    }
  }

  /* Extra small mobile */
  @media (max-width: 480px) {
    .hero-card {
      padding: 1.25rem;
    }

    .hero-image {
      width: 120px;
      height: 120px;
    }

    .hero-title {
      font-size: 1.75rem;
    }
  }
</style>
