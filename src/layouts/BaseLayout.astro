        background: var(--bg-primary);
        min-height: 100vh;
        font-size: 16px;
        overflow-x: hidden;
      }
      
      .floating-elements {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        pointer-events: none;
        z-index: -1;
      }
      
      .floating-element {
        position: fixed;
        opacity: 0.58;
        animation: float 20s ease-in-out infinite;
        pointer-events: none;
        border: 1px solid rgba(231, 76, 60, 0.2);
        box-shadow: 0 2px 8px rgba(231, 76, 60, 0.08);
        transition: transform 0.1s ease-out, opacity 0.2s ease-out;
        overflow: hidden;
        z-index: 1;
      }
      
