        --text-primary: #2c3e50;
        --text-secondary: #7f8c8d;
        --text-light: #95a5a6;
        --bg-primary: #ffffff;
        --bg-secondary: #f8f9fa;
        --bg-tertiary: #ecf0f1;
        --accent-primary: #e74c3c;
        --accent-secondary: #3498db;
        --accent-tertiary: #f39c12;
