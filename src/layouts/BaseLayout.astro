---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Andrew Ginns - Machine Learning Engineer" } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      <nav class="sidebar">
        <div class="sidebar-content">
          <div class="profile-section">
            <img src="/andrew-headshot.jpeg" alt="Andrew Ginns" class="profile-image" />
            <h1 class="site-title">Andrew Ginns</h1>
            <div class="tagline">Machine Learning Engineer</div>
          </div>
          
          <ul class="nav-links">
            <li><a href="/" class={currentPath === "/" ? "active" : ""}>Home</a></li>
            <li><a href="/experience" class={currentPath === "/experience" ? "active" : ""}>Experience</a></li>
            <li><a href="/projects" class={currentPath === "/projects" ? "active" : ""}>Projects</a></li>
            <li><a href="/writing" class={currentPath.startsWith("/writing") ? "active" : ""}>Writing</a></li>
            <li><a href="/about" class={currentPath === "/about" ? "active" : ""}>About</a></li>
            <li><a href="/contact" class={currentPath === "/contact" ? "active" : ""}>Contact</a></li>
          </ul>
          
          <div class="social-links">
            <a href="https://github.com/andrewginns" target="_blank" rel="noopener noreferrer" class="social-link">GitHub</a>
            <a href="https://linkedin.com/in/andrewginns" target="_blank" rel="noopener noreferrer" class="social-link">LinkedIn</a>
          </div>
        </div>
      </nav>
      
      <main class="content">
        <slot />
      </main>
    </div>
    
    <style is:global>
      :root {
        --text-primary: #111111;
        --text-secondary: #666666;
        --text-light: #999999;
        --bg-primary: #ffffff;
        --bg-secondary: #f8f9fa;
        --accent-primary: #2ea544;
        --border-color: #e1e5e9;
        --sidebar-width: 240px;
        --content-max-width: 800px;
        --spacing-unit: 1rem;
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
        line-height: 1.6;
        color: var(--text-primary);
        background: var(--bg-primary);
        min-height: 100vh;
        font-size: 16px;
      }
      
      .container {
        display: flex;
        min-height: 100vh;
      }
      
      .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        width: var(--sidebar-width);
        height: 100vh;
        background: var(--bg-primary);
        border-right: 1px solid var(--border-color);
        padding: calc(var(--spacing-unit) * 2);
        overflow-y: auto;
      }
      
      .sidebar-content {
        height: 100%;
        display: flex;
        flex-direction: column;
      }
      
      .profile-section {
        margin-bottom: calc(var(--spacing-unit) * 2);
        padding-bottom: calc(var(--spacing-unit) * 1.5);
        border-bottom: 1px solid var(--border-color);
      }
      
      .profile-image {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 1rem;
      }
      
      .site-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 0.25rem;
        color: var(--text-primary);
      }
      
      .tagline {
        font-size: 0.9rem;
        color: var(--text-secondary);
        font-weight: 400;
        margin-bottom: 0;
      }
      
      .nav-links {
        list-style: none;
        margin-bottom: calc(var(--spacing-unit) * 2);
        flex-grow: 1;
      }
      
      .nav-links li {
        margin-bottom: 0.25rem;
      }
      
      .nav-links a {
        display: block;
        color: var(--text-primary);
        text-decoration: none;
        font-size: 0.95rem;
        font-weight: 400;
        padding: 0.5rem 0;
        transition: color 0.2s ease;
      }
      
      .nav-links a:hover,
      .nav-links a.active {
        color: var(--accent-primary);
      }
      
      .social-links {
        padding-top: var(--spacing-unit);
        border-top: 1px solid var(--border-color);
      }
      
      .social-link {
        display: block;
        margin-bottom: 0.25rem;
        color: var(--text-secondary);
        text-decoration: none;
        font-size: 0.85rem;
        font-weight: 400;
        padding: 0.25rem 0;
        transition: color 0.2s ease;
      }
      
      .social-link:hover {
        color: var(--accent-primary);
      }
      
      .content {
        margin-left: var(--sidebar-width);
        padding: calc(var(--spacing-unit) * 3);
        max-width: var(--content-max-width);
        background: var(--bg-primary);
        min-height: 100vh;
      }
      
      h1, h2, h3, h4, h5, h6 {
        margin-bottom: 1rem;
        line-height: 1.3;
        color: var(--text-primary);
        font-weight: 700;
      }
      
      h1 {
        font-size: 2.25rem;
        margin-bottom: 1.5rem;
      }
      
      h2 {
        font-size: 1.5rem;
        color: var(--accent-primary);
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.05em;
        font-weight: 600;
        margin-bottom: 1.5rem;
        margin-top: 3rem;
      }
      
      h2:first-child {
        margin-top: 0;
      }
      
      p {
        margin-bottom: 1.5rem;
        line-height: 1.7;
      }
      
      a {
        color: var(--accent-primary);
        text-decoration: none;
        transition: color 0.2s ease;
      }
      
      a:hover {
        text-decoration: underline;
      }
      
      /* Mobile responsiveness */
      @media (max-width: 768px) {
        .container {
          flex-direction: column;
        }
        
        .sidebar {
          position: relative;
          width: 100%;
          height: auto;
          padding: var(--spacing-unit);
          border-right: none;
          border-bottom: 1px solid var(--border-color);
        }
        
        .profile-section {
          display: flex;
          align-items: center;
          gap: 1rem;
          margin-bottom: var(--spacing-unit);
        }
        
        .profile-image {
          width: 60px;
          height: 60px;
        }
        
        .nav-links {
          display: flex;
          flex-wrap: wrap;
          gap: 0.5rem;
          margin-bottom: var(--spacing-unit);
        }
        
        .nav-links li {
          margin-bottom: 0;
        }
        
        .nav-links a {
          padding: 0.75rem 1rem;
          background: var(--bg-secondary);
          border-radius: 6px;
          font-size: 0.9rem;
          min-height: 44px;
          display: flex;
          align-items: center;
          justify-content: center;
        }
        
        .nav-links a:hover,
        .nav-links a.active {
          background: var(--accent-primary);
          color: white;
        }
        
        .social-links {
          display: flex;
          gap: 0.5rem;
          padding-top: 0;
          border-top: none;
        }
        
        .social-link {
          padding: 0.5rem 1rem;
          background: var(--bg-secondary);
          border-radius: 6px;
          font-size: 0.85rem;
          min-height: 44px;
          display: flex;
          align-items: center;
          justify-content: center;
        }
        
        .social-link:hover {
          background: var(--accent-primary);
          color: white;
        }
        
        .content {
          margin-left: 0;
          padding: calc(var(--spacing-unit) * 1.5);
          max-width: 100%;
          min-height: auto;
        }
        
        h1 {
          font-size: 1.75rem;
        }
      }
      
      /* Tablet responsiveness */
      @media (max-width: 1024px) and (min-width: 769px) {
        .container {
          flex-direction: column;
        }
        
        .sidebar {
          position: relative;
          width: 100%;
          height: auto;
          padding: calc(var(--spacing-unit) * 1.5);
          border-right: none;
          border-bottom: 1px solid var(--border-color);
        }
        
        .profile-section {
          display: flex;
          align-items: center;
          gap: 1.5rem;
          margin-bottom: calc(var(--spacing-unit) * 1.5);
        }
        
        .profile-image {
          width: 70px;
          height: 70px;
        }
        
        .nav-links {
          display: flex;
          flex-wrap: wrap;
          gap: 1rem;
          margin-bottom: calc(var(--spacing-unit) * 1.5);
        }
        
        .nav-links li {
          margin-bottom: 0;
        }
        
        .nav-links a {
          padding: 0.6rem 1.2rem;
          background: var(--bg-secondary);
          border-radius: 6px;
          font-size: 0.95rem;
          min-height: 44px;
          display: flex;
          align-items: center;
          justify-content: center;
        }
        
        .nav-links a:hover,
        .nav-links a.active {
          background: var(--accent-primary);
          color: white;
        }
        
        .social-links {
          display: flex;
          gap: 1rem;
          padding-top: 0;
          border-top: none;
        }
        
        .social-link {
          padding: 0.6rem 1.2rem;
          background: var(--bg-secondary);
          border-radius: 6px;
          font-size: 0.9rem;
          min-height: 44px;
          display: flex;
          align-items: center;
          justify-content: center;
        }
        
        .social-link:hover {
          background: var(--accent-primary);
          color: white;
        }
        
        .content {
          margin-left: 0;
          padding: calc(var(--spacing-unit) * 2);
          max-width: 100%;
          min-height: auto;
        }
      }
      
    </style>
  </body>
</html>